
<h3>Người thi chi</h3>

<p>
    Người thu chi
</p>

    <div class="row">
        <div class="col-md-12">
            <form role="form">
                <div class="form-group">
                    <label for="txthovaten">
                        Họ và tên
                    </label>
                    <input type="text" class="form-control" id="txthovaten" ng-model="hovaten" />
                </div>
                <div class="form-group">
                    <label for="txtghichu">
                        Ghi chú
                    </label>
                    <input type="text" class="form-control" id="txtghichu"  ng-model="ghichu"/>
                </div>
                <button type="submit" class="btn btn-success" ng-click="InsertNguoithuchi()">
                    Insert
                </button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-condensed table-hover table-bordered table-responsive">
                <thead>
                    <tr class="success">
                        <th>
                            #ID
                        </th>
                        <th>
                            Họ và tên
                        </th>
                        <th>
                            Ghi chú
                        </th>
                        <th>...</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in Nguoithuchis">
                        <td>
                            {{item.nguoithuchi_id}}
                        </td>
                        <td>
                            {{item.hovaten}}
                        </td>
                        <td>
                            {{item.ghichu}}
                        </td>
                        <td>
                            <div class="btn btn-danger icon-camera" ng-click="DeleteNguoithuchi($index)">
                                <span class="glyphicon glyphicon-remove-sign"></span>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
